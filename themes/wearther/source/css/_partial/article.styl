icon-size = 30px
icon-gap = 10px

.l-article
  margin-top 15px
  margin-bottom 15px
  .l-post-content
    margin-bottom 50px
    position relative

  .l-gallery
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1

  .l-post-content-entry
    p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container
      margin-top 15px
    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

  .l-post-content-footer
    margin-top 15px
    padding-top 10px
    position relative


.l-post-content-header
  .l-title
    display inline-block
.post-content-header
  .title
    color color-link
    a
      transition color 0.2s ease;
      &:hover
        text-decoration none
        color lighten(color-link, 20)
      &:after
        color lighten(color-link, 60)
        font 12px font-icon
        padding-left 10px
        vertical-align super
        font-weight normal
  .title-link
    a:after
      color color-meta
      content '\f08e'


.l-header-time
  margin-bottom 5px
.header-time
  color color-meta
  font 0.8em font-title
  line-height 1em
  a:hover
    text-decoration none

.l-post-icon // match header title
  position absolute
  margin-top 0.5em
  font-size icon-size
  left 0 - (icon-size + icon-gap)
  top 0

.post-icon
  width icon-size
  height icon-size
  color color-link
  text-align right
  vertical-align middle
  &:before
    font icon-size font-icon
    width icon-size
    text-align right
  &:after
    float left

.article
  &.page
    .post-icon
      display none
  &.post
    .post-icon
      &:before
        content '\f016'

  &.photo
    .post-icon
      &:before
        content '\f030'

  &.link
    .post-icon
      &:before
        content '\f0c1'

  @media (max-width:767px)
    // full width on vertical tablet and phone
    width 100%
