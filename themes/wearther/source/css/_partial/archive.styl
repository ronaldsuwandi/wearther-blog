.l-archive-title
  margin-bottom 30px

.archive-title
  color color-meta
  font-weight normal
  &:before
    font-family font-icon
    content '\f073'
    padding-right 15px

  &.tag
    &:before
      content '\f02b'

  &.category
    &:before
      content '\f07b'

.l-archive
  .l-post-content-header
    .l-title
      display inline-block
