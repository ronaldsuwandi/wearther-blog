<% if (site.tags.length){ %>
<div class="l-widget widget l-widget-tag widget-tag">
  <h3 class="l-widget-title widget-title"><%= __('tags') %></h3>
  <ul class="l-widget-entry widget-entry l-widget-entry-list">
  <% site.tags.sort('name').each(function(item){ %>
    <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a><span class="l-tag-count tag-count"><%= item.posts.length %></span></li>
  <% }); %>
  </ul>
</div>
<% } %>