<% if (site.categories.length){ %>
<div class="l-widget widget tag">
  <h3 class="l-widget-title widget-title"><%= __('categories') %></h3>
  <ul class="l-widget-entry widget-entry l-widget-entry-list widget-entry-list">
  <% site.categories.sort('name').each(function(item){ %>
    <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a><span class="visible-phone spacer spacer-1em"></span></li>
  <% }); %>
  </ul>
</div>
<% } %>