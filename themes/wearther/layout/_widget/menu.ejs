<% if (site.posts.length){ %>
<div class="l-widget widget">
  <h3 class="l-widget-title widget-title"><%= __('menu') %></h3>
  <ul class="l-widget-entry widget-entry">
    <% for (var i in theme.menu){ %>
      <li><a href="<%- theme.menu[i] %>"><%= i %></a></li>
    <% } %>
    <!-- add social buttons -->
    <% if (theme.subscribe) { %>
      <li class="hidden-large-tablet hidden-desktop">
        <% if (theme.subscribe.facebook) { %>
          <a href="https://www.facebook.com/<%- theme.subscribe.facebook %>" target="_blank"><img src="/img/social/facebook.svg" class="l-social-menu-icon social-menu-icon">
        <% } %>
        <% if (theme.subscribe.twitter) { %>
          <a href="https://twitter.com/<%- theme.subscribe.twitter %>" target="_blank"><img src="/img/social/twitter.svg" class="l-social-menu-icon social-menu-icon"></a>
        <% } %>
        <% if (theme.subscribe.feed) { %>
          <a href="<%- theme.subscribe.feed %>" target="_blank" class="l-social-menu-icon social-menu-icon l-social-menu-icon-feed social-menu-icon-feed"></a>
        <% } %>
      </li>
    <% } %>
  </ul>
</div>
<% } %>